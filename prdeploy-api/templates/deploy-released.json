{
    "blocks": [
        {
            "type": "context",
            "elements": [
                {
                    "type": "image",
                    "image_url": "https://via.placeholder.com/32/{{environment.color}}/ffffff?text={{environment.name}}",
                    "alt_text": "{{environment.name}}"
                },
                {
                    "type": "mrkdwn",
                    "text": "{{#if isRollback}}[ROLLBACK] {{/if}}<https://github.com/{{owner}}/{{repo}}/actions/runs/{{run.id}}/attempts/{{run.run_attempt}}|Deployment> for *{{slackUser.name}}*:"
                }
            ]
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "<{{pull.html_url}}|#{{pull.number}}> {{{pull.title}}}"
            }
        },
        {
            "type": "divider"
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": {{{jsonEncode slackPullBody}}}
            }
        },
        {
            "type": "divider"
        }
    ]
}
